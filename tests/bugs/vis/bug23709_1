############################################################################
# Redesign of hlrtest command
############################################################################

pcone a 5 0 10
box b 15 0 0 10 10 10
vinit
vdisplay a
vdisplay b
vrotate 35 0 0
vfit
vhlr on
vhlrtype polyalgo b

set x_coord 290
set y_coord 170
vaspects -setwidth 5
if { "[vreadpixel $x_coord $y_coord rgb name]" != "YELLOW" } {
  puts "Error : color is not yellow"
}

set x_coord 86
set y_coord 221
checkcolor $x_coord $y_coord 0 0 0

set only_screen 1
