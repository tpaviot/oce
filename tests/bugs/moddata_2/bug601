explode a e

if [catch {blend result a 13 a_41 } res] {
    puts "Faulty OCC601: function BLEND works wrongly"
} else {
    puts "OCC601 OK: function BLEND works good"
    checkshape result
    
    set square 32486.0
    set 2dviewer 0
}
