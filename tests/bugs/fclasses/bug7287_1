puts "============"
puts "OCC7287"
puts "============"
puts ""
######################################################
# Problem of Memory Leak
######################################################

#
# Result is Null shape
#

set BugNumber OCC7287

set NCycles 10
box b1 100 100 100
box b2 50 50 50
bop b1 b2
bopcut r

set listmem {}
for {set i 1} {${i} <= ${NCycles}} {incr i } {
    bop b1 b2
    bopcut r

    lappend listmem [meminfo h]
    checktrend $listmem 0 10 "Memory leak detected"
}
